<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="12dp">


    <ImageView
        android:id="@+id/song_iamge_cover"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="16dp"
        android:background="@color/windowBackGroud"/>

    <TextView
        android:id="@+id/song_text_cover"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="歌"
        android:textColor="@color/material_white"
        android:layout_marginEnd="16dp"
        android:textSize="25sp"/>


    <TextView
        android:id="@+id/song_text_song_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/song_text_cover"
        android:text="歌曲名"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/material_black"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/song_text_singer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/song_text_song_name"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/song_text_cover"
        android:text="歌手名"
        android:textSize="14sp"/>


</RelativeLayout>