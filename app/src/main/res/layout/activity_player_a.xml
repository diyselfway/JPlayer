        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager_player_a"
                android:layout_width="match_parent"
                android:layout_height="140dp">

            </android.support.v4.view.ViewPager>

            <LinearLayout
                android:id="@+id/layout_seekbar_a"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@id/viewPager_player_a"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_progressTime_a"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="0:00"/>

                <SeekBar
                    android:id="@+id/seekBar_a"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="10"/>

                <TextView
                    android:id="@+id/text_totalTime_a"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="4:55"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_controlBar_a"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_below="@id/layout_seekbar_a"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/button_last_a"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="30dp"
                    android:background="@color/windowBackGroud"
                    android:src="@drawable/skip_previous"/>

                <com.julian.qplayer.PlayButton
                    android:id="@+id/playButton_a"
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>

                <ImageButton
                    android:id="@+id/button_next_a"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="30dp"
                    android:background="@color/windowBackGroud"
                    android:src="@drawable/skip_next"/>
            </LinearLayout>

            <ListView
                android:id="@+id/list_playlist_a"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:layout_below="@id/layout_controlBar_a">
            </ListView>

        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>


